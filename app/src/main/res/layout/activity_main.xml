<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_in_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:elevation="0dp"
    tools:context=".activities.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/in_game_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:keepScreenOn="true">

        <FrameLayout
            android:id="@+id/fl_board"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_drawer_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:contentDescription="@string/drawer_toggle_content_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:backgroundTint="?attr/colorPrimary"
            app:tint="?attr/colorOnPrimary"
            app:srcCompat="@drawable/playstation4_touchpad"
            app:fabCustomSize="@dimen/in_game_toggle_fab_size"
            app:maxImageSize="@dimen/in_game_toggle_fab_icon"
            app:layout_constraintHorizontal_bias="0.5" />

        <!-- Bottom select/start row -->
        <LinearLayout
            android:id="@+id/ll_pad_select_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <kr.co.iefriends.pcsx2.core.input.view.PSButtonView
                android:id="@+id/btn_pad_select"
                android:layout_width="59dp"
                android:layout_height="46dp"
                android:layout_margin="5dp" />

            <kr.co.iefriends.pcsx2.core.input.view.PSButtonView
                android:id="@+id/btn_pad_start"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:layout_margin="5dp" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_pad_shoulders_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <kr.co.iefriends.pcsx2.core.input.view.PSShoulderButtonView
                android:id="@+id/btn_pad_l2"
                android:layout_width="51dp"
                android:layout_height="52dp"
                android:layout_margin="6dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <kr.co.iefriends.pcsx2.core.input.view.PSShoulderButtonView
                android:id="@+id/btn_pad_l1"
                android:layout_width="51dp"
                android:layout_height="52dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="6dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_pad_l2" />

            <kr.co.iefriends.pcsx2.core.input.view.PSButtonView
                android:id="@+id/btn_pad_l3"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/btn_pad_l2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_pad_shoulders_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="24dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <kr.co.iefriends.pcsx2.core.input.view.PSShoulderButtonView
                android:id="@+id/btn_pad_r2"
                android:layout_width="51dp"
                android:layout_height="52dp"
                android:layout_margin="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <kr.co.iefriends.pcsx2.core.input.view.PSShoulderButtonView
                android:id="@+id/btn_pad_r1"
                android:layout_width="51dp"
                android:layout_height="52dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_pad_r2" />

            <kr.co.iefriends.pcsx2.core.input.view.PSButtonView
                android:id="@+id/btn_pad_r3"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_pad_r2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_pad_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <kr.co.iefriends.pcsx2.core.input.view.JoystickView
                android:id="@+id/joystick_right"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <LinearLayout
                android:id="@+id/ll_pad_right_buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="6dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@id/joystick_right"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Top button (Triangle/Y) -->
                <kr.co.iefriends.pcsx2.core.input.view.PSButtonView
                    android:id="@+id/btn_pad_y"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="-15dp" />

                <!-- Middle row (Square/X and Circle/B) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="-15dp">

                    <kr.co.iefriends.pcsx2.core.input.view.PSButtonView
                        android:id="@+id/btn_pad_x"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="2dp" />

                    <kr.co.iefriends.pcsx2.core.input.view.PSButtonView
                        android:id="@+id/btn_pad_b"
                        android:layout_width="48dp"
                        android:layout_height="48dp" />
                </LinearLayout>

                <!-- Bottom button (Cross/A) -->
                <kr.co.iefriends.pcsx2.core.input.view.PSButtonView
                    android:id="@+id/btn_pad_a"
                    android:layout_width="48dp"
                    android:layout_height="48dp" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <kr.co.iefriends.pcsx2.core.input.view.JoystickView
            android:id="@+id/joystick_left"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <kr.co.iefriends.pcsx2.core.input.view.DPadView
            android:id="@+id/dpad_view"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="6dp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/joystick_left"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Home overlay when no game selected -->
        <include
            layout="@layout/activity_game_selector"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/drawer_card"
        android:layout_width="@dimen/in_game_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginStart="0dp"
        android:fitsSystemWindows="true"
        android:background="@android:color/transparent"
        android:elevation="0dp">

        <include
            android:id="@+id/drawer_in_game_include"
            layout="@layout/drawer_in_game" />

    </FrameLayout>

</androidx.drawerlayout.widget.DrawerLayout>
